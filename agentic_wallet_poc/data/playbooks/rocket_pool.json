{
  "protocol": "rocket_pool",
  "version": "1.0",
  "chain_id": 1,

  "contracts": {
    "deposit_pool": {
      "address": "0xDD9683b1bF4bB6d8fDF0A2B4A05aaadCA2A8a921",
      "abi_source": "etherscan_cache"
    },
    "reth": {
      "address": "0xae78736Cd615f374D3085123A210448E74Fc6393",
      "abi_source": "etherscan_cache"
    }
  },

  "actions": {
    "rocketpool_stake": {
      "description": "Stake ETH via Rocket Pool (receive rETH)",
      "target_contract": "deposit_pool",
      "function_name": "deposit",
      "abi_source": "etherscan_cache",
      "value_logic": {
        "type": "from_arg",
        "source_arg": "value"
      },
      "required_payload_args": ["value", "human_readable_amount"],

      "payload_args": {
        "value": {
          "source": "resolve_amount",
          "llm_field": "amount_human",
          "fallback_llm_fields": ["value"],
          "decimals_from": "$native"
        },
        "human_readable_amount": {
          "source": "compute_human_readable",
          "template": "{amount_human} ETH"
        }
      },

      "param_mapping": []
    },

    "rocketpool_unstake": {
      "description": "Burn rETH to unstake from Rocket Pool (receive ETH)",
      "target_contract": "reth",
      "function_name": "burn",
      "abi_source": "etherscan_cache",
      "value_logic": { "type": "zero" },
      "required_payload_args": ["_rethAmount", "human_readable_amount"],

      "payload_args": {
        "_rethAmount": {
          "source": "resolve_amount",
          "llm_field": "amount_human",
          "fallback_llm_fields": ["_rethAmount", "amount"],
          "decimals_from": 18
        },
        "human_readable_amount": {
          "source": "compute_human_readable",
          "template": "{amount_human} rETH"
        }
      },

      "param_mapping": [
        { "name": "_rethAmount", "source": "arg", "arg_key": "_rethAmount", "coerce": "uint256" }
      ]
    }
  }
}
